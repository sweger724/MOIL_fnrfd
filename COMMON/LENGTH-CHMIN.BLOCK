c	maximal number of atoms shared by two PEs
	integer mx_shk_shr
	parameter(mx_shk_shr=5)
c	maximal number of atoms that a single PE may share with the others
	integer mx_shk_shr_tot
	parameter(mx_shk_shr_tot = mx_shk_shr * maxpe)
