c yael
c the maximal number of parts for a monomer.
        integer maxdiv
        parameter(maxdiv=9)
c for parallel shake - the maximum number of bonds between two
c different processors.
        integer maxlink
        parameter(maxlink=6)
c for virtual particles
        parameter(nvptmax=10)


